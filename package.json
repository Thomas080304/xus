{
  "name": "xus",
  "version": "0.5.0",
  "description": "logic-less applications",
  "repository": {
    "type": "git",
    "url": "https://github.com/tetsuo/xus.git"
  },
  "main": "index.js",
  "umd:main": "dist/xus.js",
  "typings": "lib/index",
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rm -fr lib dist",
    "dist": "npm run build && mkdir -p dist && NODE_ENV=production browserify index.js -s xus | uglifyjs -c > dist/xus.js",
    "docs": "rm -fr examples/api && typedoc --includeDeclarations --name 'xÅ«s API' --gaID 'UA-1238030-11' --gaSite 'tetsuo/xus' --out examples/api --mode file --excludePrivate --excludeNotExported --excludeExternals --theme /Users/onur/dev/typedoc-theme --exclude '**/test/**' --jsx react src",
    "prepublish": "npm run test && npm run dist",
    "test": "tape lib/**/test/*.js",
    "test-diff": "tape lib/**/test/*.js | tap-diff",
    "watch": "npm run clean && tsc --watch"
  },
  "author": "Onur Gunduz <ogunduz@gmail.com> (https://onurgunduz.com)",
  "license": "MIT",
  "dependencies": {
    "duplexify": "^3.5.0",
    "from2": "^2.3.0",
    "htmlparser2": "^3.9.2",
    "pumpify": "^1.3.5",
    "through2": "^2.0.3"
  },
  "devDependencies": {
    "@types/enzyme": "^2.8.1",
    "@types/escape-html": "^0.0.19",
    "@types/htmlparser2": "^3.7.29",
    "@types/react": "^15.0.32",
    "@types/react-dom": "^15.5.1",
    "@types/tape": "^4.2.30",
    "@types/through2": "^2.0.33",
    "browserify": "^14.4.0",
    "enzyme": "^2.9.1",
    "mobx": "^3.1.16",
    "mobx-react": "^4.2.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-test-renderer": "^15.6.1",
    "tap-diff": "^0.1.1",
    "tape": "^4.7.0",
    "tsify": "^3.0.1",
    "tslint": "^5.4.3",
    "tslint-eslint-rules": "^4.1.1",
    "tslint-react": "^3.0.0",
    "typedoc": "^0.7.1",
    "typedoc-theme": "^0.1.2",
    "typescript": "^2.3.4",
    "uglify-js": "^3.0.23"
  },
  "files": [
    "dist",
    "lib",
    "LICENSE"
  ]
}
